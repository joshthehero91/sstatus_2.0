BOLD='\e[1m';LBLU='\e[94m';NC='\e[0m';echo "";if [[ $(httpd -V|egrep "HTTPD_ROOT=\"\/etc\/apache2") ]]; then echo -e "${BOLD}${LBLU}Inherent PHP version:${NC}";php -v|head -n1|awk '{print$1" "$2}'; echo -e "${BOLD}${LBLU}PHP versions in use on `hostname`:${NC}" ;grep "phpversion:" /var/cpanel/userdata/*/*|awk '{print $2}'|sort|uniq -c|sort -rnk1;echo "";if [[ $(yum list installed|grep "memcache\|opcache") ]]; then echo -e "${BOLD}${LBLU}PHP caching:${NC}";yum list installed|grep "memcache\|opcache"|awk '{print $1}'; else echo -e "${BOLD}${LBLU}No PHP caching${NC}";fi;else echo -e "${BOLD}${LBLU}Inherent PHP version:${NC}:"; php -v|head -n1|awk '{print$1" "$2}';if [[ $(php -m|grep cache) ]]; then echo -e "${BOLD}${LBLU}PHP caching:${NC}";php -m|grep cache; else echo -e "${BOLD}${LBLU}No PHP caching${NC}";fi;fi;echo ""; echo -e "${BOLD}${LBLU}Checking various memory_limit settings:"${NC}; echo -en "Current loaded php.ini file: ";echo -e ${LBLU}${BOLD}$(php -i|grep "Loaded Configuration File"|awk '{print$5}'|head -1);echo -e $(cat `php -i|grep "Loaded Configuration File"|awk '{print$5}'|head -1`| grep memory_limit)${NC};